# ===========================================
# Lead Formatter Waitlist - Environment Config
# ===========================================

# Server
PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# MongoDB
MONGO_URI=mongodb://localhost:27017/lead-formatter-waitlist

# ===========================================
# ConvertKit Integration
# ===========================================
# Get these from ConvertKit > Settings > Advanced > API

CONVERTKIT_API_KEY=your_api_key
CONVERTKIT_API_SECRET=your_api_secret
CONVERTKIT_FORM_ID=your_form_id

# Tag IDs - Create these tags in ConvertKit and get their IDs
# You can find tag IDs at: https://api.convertkit.com/v3/tags?api_key=YOUR_KEY
CONVERTKIT_TAG_WAITLIST=          # Tag for all waitlist signups
CONVERTKIT_TAG_TIER_0=            # Tag for verified users (base tier)
CONVERTKIT_TAG_TIER_1=            # Tag for tier 1 (3 referrals)
CONVERTKIT_TAG_TIER_2=            # Tag for tier 2 (6 referrals)
CONVERTKIT_TAG_TIER_3=            # Tag for tier 3 (10 referrals)
CONVERTKIT_TAG_TIER_4=            # Tag for tier 4 (20 referrals)
CONVERTKIT_TAG_NEW_REFERRAL=      # Tag triggered when someone refers a user

# ===========================================
# Reward Links
# ===========================================
# These are the links users see when they unlock rewards

# Base tier rewards (everyone gets these)
REWARD_COLD_EMAIL_BIBLE=https://your-link.com/cold-email-bible
REWARD_EMAIL_GENERATOR=https://your-link.com/email-generator
REWARD_NICHES_PROMPT=https://your-link.com/niches-prompt
REWARD_PARTNER_DISCOUNTS=https://your-link.com/partner-discounts

# Tier rewards
REWARD_TIER_1=https://your-link.com/subject-line-masterclass
REWARD_TIER_2=https://your-link.com/offer-creation-system
REWARD_TIER_3=https://your-link.com/dream-100-system
REWARD_TIER_4=https://your-link.com/agency-roadmap

# ===========================================
# Admin
# ===========================================
WAITLIST_ADMIN_KEY=your-secure-admin-key-here
